# Crime News Scraper Configuration

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
NEWSAPI_KEY=your_newsapi_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Database Configuration
DATABASE_PATH=crime_data.db

# Output Directories
OUTPUT_DIR=output
LOGS_DIR=logs

# Scraper Configuration
SCRAPE_DEEP_CHECK=false
MAX_ARTICLES_PER_SOURCE=100

# Analyzer Configuration
DEFAULT_BATCH_SIZE=10
CLAUDE_MODEL=claude-3-7-sonnet-20250219
MAX_TOKENS=4000
TEMPERATURE=0.7

# Nearby Finder Configuration
DEFAULT_SEARCH_RADIUS=1609  # 1 mile in meters
MAX_RESULTS_PER_CATEGORY=5
GOOGLE_MAPS_RATE_LIMIT_DELAY=0.2  # Delay between API calls in seconds

# The following settings are configured in src/nearby_finder/config.py:
# - TARGET_BUSINESS_TYPES: Types of businesses to search for
# - LUXURY_KEYWORDS: Keywords for identifying luxury goods stores
# - SPORTS_MEMORABILIA_KEYWORDS: Keywords for identifying sports memorabilia stores
# - VAPE_SMOKE_KEYWORDS: Keywords for identifying vape/smoke shops

# Location Configuration
MONITORED_LOCATIONS=Nevada,California,Georgia,Texas,Arizona